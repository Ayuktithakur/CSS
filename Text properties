<!-- HTML part for prop.1-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1> Heading</h1>
    <p> This is heading</p>
    <div> 
        <b>
            Hey! I am Ayukti.  
        </b>
    </div>
</html>
/* CSS part for prop.1*/
/*text-align property*/
h1{
    text-align: center;
}
p{
    text-align: start;
}
div
{ 
    text-align: right;
}
<!-- HTML part for prop.2-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
 <h1>Hello! We are Coders.</h1>
 <h3>Hello! We are Coders.</h3>
 <p>Hello! We are Coders.</p>
<a href="www.example.com">Click here</a>
</html>
/* CSS part for prop.2*/
/*text-decoration property*/
h1{
 text-decoration:underline ;
}
h3{
    text-decoration:line-through ;
}
p{
    text-decoration: overline;
}
a{
    text-decoration: none;
}
<!-- HTML part for prop.3-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
 <h1>Hello! 1</h1>
 <h2>Hello! 2</h2>
 <h3>Hello! 3</h3>
<h4>Hello! 4</h4>
</html>
/* CSS part for prop.3*/
/*font-weight property*/
h1{
 font-weight:bolder ;
}
h2{
    font-weight:normal ;
}
h3{
    font-weight: lighter;
}
h4{
    font-weight: 300;
}
<!-- HTML part for prop.4-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
 <h1 id="CS1">Hello! 1</h1>
 <p id="CS2"> Hello!2</p>
</html>
/* CSS part for prop.4*/
/*font-family property*/
#CS1{
 font-family:Arial  ;
}
#CS2{
font-family: serif,Georgia;
}
