 <!--Type 1-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Css level 1</title>
</head>
<body> 
    <header>  <h2> property:color</h2></header>
    <main>
    <h4 style="color:red"> Hello I am Ayukti!</h4>
    <h4 style="color:rgb(188, 6, 243)"> Hello I am Ayukti!</h4>
</main> 
</body>
</html>
<--Type 2-->
 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Css level 1</title>
    <style> h3{ color: blue;}
        </style>
</head>
<body> 
    <header>  <h2> property:color</h2></header>
    <main>
    <h3> Hello world!</h3>
    <h3>I am Ayukti!</h3>
    </main> 
</body>
</html>
   <!--Type 3-->
   <!--file.css part-->
   h4{
   color: red;
   }
   <!--file.html part-->
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Css level 1</title>
    <link rel="stylesheet" href="style.css">
</head>
<body> 
    <header>  <h2> property:color</h2></header>
    <main>
    <h4> Hello world!</h4>
    <h4>I am Ayukti!</h4>
    </main> 
</body>
</html>
<!-- html content--> 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
   <p>Hii, how are you ?</p>
   <button>Click here</button>
</body>
</html>
<!-- stylesheet content-->
button{
    color: darkcyan;
    background-color:navy ;
}
body{
    background-color: skyblue ;
}

p{
    color: gray;
}

